<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_night</item>
    </style>

    <style name="AppTheme.Light" parent="AppBaseTheme.Light">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_light</item>
    </style>

    <style name="AppTheme.OStyle" parent="AppBaseTheme.OStyle">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_light</item>
    </style>

</resources>