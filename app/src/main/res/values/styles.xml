<resources>

    <style name="AppBaseTheme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="customWindowBackground">@color/background_light</item>
        <item name="listDividerColor">@color/divider_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="commentReplyBg">@color/comment_reply_bg_light</item>
        <item name="menuItemColor">@color/menuTextLight</item>
        <item name="tabForegroundColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="customWindowBackground">@color/background_dark</item>
        <item name="menuItemColor">@color/menuTextDark</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>
        <item name="customWindowBackground">@color/background_dark</item>
        <item name="listDividerColor">@color/divider_night</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="commentReplyBg">@color/comment_reply_bg_dark</item>
        <item name="menuItemColor">@color/menuTextDark</item>
        <item name="tabForegroundColor">@android:color/white</item>
    </style>

    <style name="AppBaseTheme.OStyle" parent="Theme.MaterialComponents.Light">
        <!--<item name="actionBarStyle">@style/AppBaseTheme.OStyle.ActionBar</item>-->
        <item name="actionBarTheme">@style/AppBaseTheme.OStyle.ActionBar.Theme</item>
        <item name="colorPrimary">@color/allLightPrimary</item>
        <item name="colorPrimaryDark">@color/allLightDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorEdgeEffect">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="customWindowBackground">@color/background_light</item>
        <item name="listDividerColor">@color/divider_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="commentReplyBg">@color/comment_reply_bg_light</item>
        <item name="menuItemColor">@color/menuTextLight</item>
        <item name="tabForegroundColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppTheme.Light" parent="AppBaseTheme.Light" />

    <style name="AppTheme.OStyle" parent="AppBaseTheme.OStyle" />

    <!--<style name="AppBaseTheme.OStyle.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">-->
    <!--<item name="android:titleTextStyle">@style/AppBaseTheme.OStyle.ActionBar.TitleText</item>-->
    <!--</style>-->

    <style name="AppBaseTheme.OStyle.ActionBar.Theme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!--<style name="AppBaseTheme.OStyle.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">-->
    <!--<item name="android:textColor">@color/colorPrimary</item>-->
    <!--</style>-->

    <style name="AppTheme.CommonDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="customWindowBackground">@color/background_dark</item>
    </style>

    <style name="AppTheme.CommonDialog.Light" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="customWindowBackground">@color/background_light</item>
    </style>

    <style name="AppTheme.CommonDialog.OStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/allLightPrimary</item>
        <item name="colorPrimaryDark">@color/allLightDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="customWindowBackground">@color/background_light</item>
    </style>

    <style name="BottomSheetMenu">
        <item name="android:background">?customWindowBackground</item>
    </style>

    <style name="BottomSheetItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?menuItemColor</item>
        <item name="android:drawableTint">?menuItemColor</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorAccent">@color/colorAccent_night</item>
    </style>

    <style name="BottomSheetDialog.Light" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheetDialog.OStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Widget.MaterialRefresh.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:elevation">4dp</item>
        <item name="android:background">?colorPrimary</item>
        <item name="tabIndicator">@drawable/material_refresh_tab_indicator</item>
        <item name="tabIndicatorColor">?tabForegroundColor</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.MaterialRefresh.TabLayout</item>
        <item name="tabTextColor">?tabForegroundColor</item>
        <item name="tabIconTint">?tabForegroundColor</item>
        <item name="enforceTextAppearance">false</item>
    </style>

    <style name="TextAppearance.MaterialRefresh.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?tabForegroundColor</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
