<resources>

    <style name="AppBaseTheme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="actionBarStyle">@style/AppBaseTheme.ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="commentReplyBg">@color/comment_reply_bg_light</item>
        <item name="menuItemColor">@color/menuTextLight</item>
        <item name="tabForegroundColor">@android:color/white</item>
        <item name="actionBarColor">@color/colorActionBarBackground</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialDialogTheme</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="actionMenuIconTint">@android:color/white</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_night</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_night</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_night</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_night</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="menuItemColor">@color/menuTextDark</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialDialogTheme</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="actionMenuIconTint">@android:color/white</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="actionBarStyle">@style/AppBaseTheme.ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_night</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_night</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_night</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_night</item>
        <item name="commentReplyBg">@color/comment_reply_bg_dark</item>
        <item name="menuItemColor">@color/menuTextDark</item>
        <item name="tabForegroundColor">@android:color/white</item>
        <item name="actionBarColor">@color/colorActionBarBackground_night</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialDialogTheme</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="actionMenuIconTint">@android:color/white</item>
    </style>

    <style name="AppBaseTheme.White" parent="Theme.MaterialComponents.Light">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="actionBarStyle">@style/AppBaseTheme.ActionBar</item>
        <item name="actionBarTheme">@style/AppBaseTheme.White.ActionBar.Theme</item>
        <item name="colorPrimary">@color/colorPrimary_white</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_white</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary_white</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_white</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_white</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_white</item>
        <item name="android:colorEdgeEffect">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="commentReplyBg">@color/comment_reply_bg_light</item>
        <item name="menuItemColor">@color/menuTextLight</item>
        <item name="tabForegroundColor">@color/colorPrimary_white</item>
        <item name="actionBarColor">@color/colorActionBarBackground_white</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialDialogTheme</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="actionMenuIconTint">@color/colorPrimary_white</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppTheme.Light" parent="AppBaseTheme.Light" />

    <style name="AppTheme.White" parent="AppBaseTheme.White" />

    <style name="AppBaseTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">?actionBarColor</item>
    </style>

    <style name="AppBaseTheme.White.ActionBar.Theme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary_white</item>
    </style>

    <style name="AppTheme.CommonDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_night</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_night</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_night</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_night</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AppTheme.CommonDialog.Light" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AppTheme.CommonDialog.White" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="colorPrimary">@color/colorPrimary_white</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_white</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary_white</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_white</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_white</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="BottomSheetMenu">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="BottomSheetItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:paddingLeft">@dimen/horizontal_padding_dialog</item>
        <item name="android:paddingRight">@dimen/horizontal_padding_dialog</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?menuItemColor</item>
        <item name="android:drawableTint">?menuItemColor</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorAccent">@color/colorSecondary_night</item>
    </style>

    <style name="BottomSheetDialog.Light" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="BottomSheetDialog.White" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Widget.MaterialRefresh.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:elevation">4dp</item>
        <item name="android:background">?actionBarColor</item>
        <item name="tabIndicator">@drawable/material_refresh_tab_indicator</item>
        <item name="tabIndicatorColor">?tabForegroundColor</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.MaterialRefresh.TabLayout</item>
        <item name="tabTextColor">?tabForegroundColor</item>
        <item name="tabIconTint">?tabForegroundColor</item>
        <item name="enforceTextAppearance">false</item>
    </style>

    <style name="TextAppearance.MaterialRefresh.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?tabForegroundColor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.MaterialDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.DialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.DialogButton</item>
    </style>

    <style name="AppTheme.DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="rippleColor">?colorSecondary</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="iconTint">?colorSecondary</item>
    </style>

</resources>
