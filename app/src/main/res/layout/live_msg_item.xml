<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/horizontal_padding"
    android:paddingEnd="@dimen/horizontal_padding"
    android:paddingBottom="@dimen/vertical_padding">

    <ImageView
        android:id="@+id/timeline_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/timeline_dot_desc"
        android:src="@drawable/ic_dot" />

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@id/timeline_dot"
        android:textColor="@color/againstText" />

    <TextView
        android:id="@+id/post_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_time"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/timeline_dot"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/post_image_container"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/live_post_image"
        android:scaleType="centerCrop" />

</RelativeLayout>