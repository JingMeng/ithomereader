<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="android:backgroundDimAmount">0.32</item>
        <item name="actionBarStyle">@style/AppBaseTheme.ActionBar</item>
        <item name="actionBarTheme">@style/AppBaseTheme.ActionBar.Theme</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_night</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_night</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_night</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_night</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialDialogTheme</item>
        <item name="textInputStyle">@style/AppTheme.TextInput</item>
        <item name="commentReplyBg">@color/comment_reply_bg_dark</item>
        <item name="menuItemColor">@color/menuTextDark</item>
        <item name="tabForegroundColor">@android:color/white</item>
        <item name="actionBarColor">@color/colorActionBarBackground_night</item>
        <item name="actionMenuIconTint">@color/colorPrimary_night</item>
    </style>

    <style name="AppBaseTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">?actionBarColor</item>
    </style>

    <style name="AppBaseTheme.ActionBar.Theme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary_night</item>
    </style>

    <style name="AppBaseTheme.Fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_night</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_night</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_night</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_night</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialDialogTheme</item>
        <item name="menuItemColor">@color/menuTextDark</item>
        <item name="actionMenuIconTint">@android:color/white</item>
    </style>

    <style name="AppTheme.CommonDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="android:backgroundDimAmount">0.32</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_night</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_night</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_night</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_night</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:background">@color/dialogBackgroundColor_night</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.32</item>
        <item name="android:colorBackground">@color/dialogBackgroundColor_night</item>
    </style>

    <style name="AppTheme.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/dialogBackgroundColor_night</item>
        <item name="hintTextColor">?colorSecondary</item>
        <item name="boxStrokeColor">@color/material_filled_stroke_color</item>
    </style>

</resources>